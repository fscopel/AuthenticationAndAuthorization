@model LogInViewModel
@{
    ViewData["Title"] = "Index";
}

    <div class="text-center">
        <h1 class="display-4">Welcome to the Front Desk</h1>
        @if (User.Identity.IsAuthenticated == false)
        {
            <p>Got ahead and identify yourself using the form below</p>
            <form class="form-signin" asp-controller="FrontDesk" asp-action="CheckIn" method="post">
                <input type="hidden" asp-for="ReturnUrl" />

                <img class="mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                <label asp-for="Email" class="sr-only"></label>
                <input type="email" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email address" required="" autofocus="">

                <label asp-for="Password" class="sr-only">Password</label>
                <input type="password" id="inputPassword" asp-for="Password" name="password" class="form-control" placeholder="Password" required="">

                <div class="checkbox mb-3">
                    <label asp-for="RememberLogin">
                        <input asp-for="RememberLogin">Remember Me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Check in</button>
                <p class="mt-5 mb-3 text-muted">© 2017-2019</p>
            </form>
        }
        else
        {
            <form class="form-signin" asp-controller="FrontDesk" asp-action="CheckOut" method="post">

                <img class="mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">

                <label asp-for="Email" class="sr-only"></label>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Check out</button>
            </form>
        }


    </div>

